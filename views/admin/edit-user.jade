doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title Makerspace Administration
    style
        include ./../common/styles.jade
    include ./../common/scripts.jade

    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
      script(src='https://use.fontawesome.com/9a4a4c94e1.js')
  body
    #wrapper
      // Navigation
      include ./../common/navbar.jade
      #page-wrapper
        .row
          .h1.page-header.text-center #{nameField} #{surnameField}
          // /.col-lg-12
        // /.row
        .row
          .col-lg-12
            if alert.description
              if alert.type == 'success'
                .alert.alert-success.fade.in 
                  p.description= alert.description
                    a(href="#" class='close' data-dismiss='alert' aria-label='close') &times
              if alert.type == 'error' 
                .alert.alert-danger.fade.in 
                  p.description= alert.description
                    a(href="#" class='close' data-dismiss='alert' aria-label='close') &times
              if alert.type == 'info' 
                .alert.alert-danger.fade.in 
                  p.description= alert.description
                    a(href="#" class='close' data-dismiss='alert' aria-label='close') &times
            .panel.panel-default
              .panel-heading Edit user:
              .panel-body
                .row
                  .col-lg-12
                    form(role='form', action = userId, method='post')
                      .col-md-6
                        .form-group
                          label First Name
                          input.form-control(type='text', name='firstName', value='#{nameField}') 
                      .col-md-6
                        .form-group
                          label Last Name
                          input.form-control(type='text', name='lastName', value='#{surnameField}')
                      .col-lg-12
                        .form-group
                          label Email
                          input.form-control(placeholder='name@example.com', name="email", value='#{emailField}')
                        .form-group
                          label Joined
                          input.form-control(type='date', name='joined', value='#{joinedField}')
                        .form-group
                          label Affiliation
                          select.form-control(name='affiliation', value='#{affiliationField}') 
                            //Fill these in from database table called affiliation
                            option UNH Undergraduate Student
                            option UNH Graduate Student
                            option UNH Faculty/Staff
                            option Other
                        .form-group
                          label Role
                          select.form-control(name='role')
                            option User
                              option Mentor
                              option Volunteer
                              option Master
                              option Board Member
                              option Other
                        .form-group
                            label RFID Tag Number
                            input.form-control(type='number', value='#{rfidField}')
                        

                        .panel.panel-default
                          .panel-heading 
                            strong Training:
                          .panel-body
                            .row
                              .col-sm-3
                                .form-group
                                  label Laser Trained
                                  input.form-control(type='date', name='laserDate') 
                              .col-sm-3
                                .form-group
                                  label 3D Printer Trained
                                  input.form-control(type='date', name='3dpDate')
                              .col-sm-3
                                .form-group
                                  label Vinyl Cutter Trained                                
                                  input.form-control(type='date', name='3dpDate')
                              .col-sm-3
                                .form-group
                                  label Tools Trained                                
                                  input.form-control(type='date', name='3dpDate')
                            .row
                              .col-sm-3
                                .form-group
                                  label Laser Trained
                                  input.form-control(type='date', name='laserDate')
                              .col-sm-3
                                .form-group
                                  label 3D Printer Trained
                                  input.form-control(type='date', name='3dpDate')
                              .col-sm-3
                                .form-group
                                  label Vinyl Cutter Trained                                
                                  input.form-control(type='date', name='3dpDate')
                              .col-sm-3
                                .form-group
                                  label Tools Trained                                
                                  input.form-control(type='date', name='3dpDate')

                        .form-group
                            label Notes
                            textarea.form-control(type='', name='notes', style='resize:vertical', rows=6)
                              | #{notesField}

                        button.btn.btn-primary(type='submit') Save
                        | &nbsp;&nbsp;
                        button.btn.btn-default 
                          a(href='/users') Cancel
                        button.btn.btn-danger.pull-right Delete User

    // jQuery
    script(src='../bower_components/jquery/dist/jquery.min.js')
    // Bootstrap Core JavaScript
    script(src='../bower_components/bootstrap/dist/js/bootstrap.min.js')
    // Metis Menu Plugin JavaScript
    script(src='../bower_components/metisMenu/dist/metisMenu.min.js')
    // Custom Theme JavaScript
    script(src='../dist/js/sb-admin-2.js')
